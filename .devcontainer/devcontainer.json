{
  "name": "OpenFactory-VirtualAssets â€” Collection of virtual assets for OpenFactory",
  "image": "mcr.microsoft.com/devcontainers/python:2.0.2-3.13-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {},
    "ghcr.io/openfactoryio/openfactory-sdk/infra": {
      "openfactory-version": "main"
    },
    "ghcr.io/openfactoryio/openfactory-sdk/opcua-connector": {
      "opcua-gateway-version": "latest",
      "opcua-coordinator-version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "containerEnv": {
    "OPENFACTORY_ENV": "dev",
    "OPENFACTORY_UNS_SCHEMA": "/workspaces/openfactory-virtual-assets/.devcontainer/uns.yml"
  },
  "postCreateCommand": "pip install -e .[dev]"
}
