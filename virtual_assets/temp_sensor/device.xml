<!-- ==========================================================
       MTConnect Device file for a Virtual Temperature Sensor
     ========================================================== -->

<MTConnectDevices>
  <Devices>
    <Device uuid="TEMP-GEN" id="vtempsens" name="VIRTUAL-TEMPERATURE-SENSOR">

      <!-- General information -->
      <Description>
         A Mocked Temperature Sensor
      </Description>
      <DataItems>
        <DataItem category="EVENT" id="avail" type="AVAILABILITY"/>
      </DataItems>

      <!-- Components -->
      <Components>

        <!-- Sensor -->
        <Sensor id="sensor">

          <!-- DataItems -->
          <DataItems>
            <DataItem category="SAMPLE" id="Temp" type="TEMPERATURE" units="CELCIUS"/>
          </DataItems>

        </Sensor>

      </Components>
    </Device>
  </Devices>
</MTConnectDevices>
